<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match_detail_tbl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp" >

    <TableRow
        android:id="@+id/match_detail_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/group_detail_1_name"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/group_detail_1_race"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/group_detail_1_flag"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/group_detail_1_map_score"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/group_detail_2_map_score"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/group_detail_2_flag"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/group_detail_2_race"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/group_detail_2_name"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_width="0dp"
            android:textColor="#000000" />
    </TableRow>

    <include
        android:id="@+id/group_detail_row_1"
        layout="@layout/map_detail_row" />

    <include
        android:id="@+id/group_detail_row_2"
        layout="@layout/map_detail_row" />

    <include
        android:id="@+id/group_detail_row_3"
        layout="@layout/map_detail_row" />

</TableLayout>